<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".photo_sonuc">
    <LinearLayout
        android:id="@+id/fotograflar_bolumu"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_cardview1_margin"
            android:layout_centerInParent="true"
            app:cardElevation="@dimen/main_cardview_Evelation"
            tools:ignore="RtlHardcoded"
            app:cardCornerRadius="@dimen/main_cardview_Radios">
            <ImageView
                android:id="@+id/user_photo_img_view"
                android:layout_width="700px"
                android:layout_height="450px"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:gravity="center"
                ></ImageView>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/waiting_icon"
            android:layout_height="wrap_content">
        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_cardview1_margin"
            android:layout_centerInParent="true"
            app:cardElevation="@dimen/main_cardview_Evelation"
            tools:ignore="RtlHardcoded"
            app:cardCornerRadius="@dimen/main_cardview_Radios">
            <ImageView
                android:id="@+id/sonuc_photo_img_view"
                android:layout_width="700px"
                android:layout_height="450px"
                android:layout_centerInParent="true"
                android:duplicateParentState="true"
                android:gravity="center"
                ></ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/YeniNumara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_above="@id/reklam_bolumu"
        android:background="@drawable/btn_rounded"
        android:drawableLeft="@drawable/share_icon"
        android:drawablePadding="@dimen/main_button_drawable_pading"
        android:duplicateParentState="true"
        android:gravity="center"
        android:padding="@dimen/main_button_drawable_pading"
        android:layout_centerHorizontal="true"
        android:text="Share App"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_medium"
        android:onClick="uygulamayi_paylas"
        ></Button>
    <LinearLayout
        android:id="@+id/reklam_bolumu"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="50px"></LinearLayout>
</RelativeLayout>